# Vivid Node Canvas - Backend Environment
ENVIRONMENT=development
PROJECT_NAME=Vivid Node Canvas

# PostgreSQL
POSTGRES_USER=vivid_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=vivid_canvas
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# CORS
CORS_ORIGINS=http://localhost:3100,http://127.0.0.1:3100
SEED_AUTEUR_DATA=false
ALLOW_INPUT_FALLBACKS=true
VIDEO_SCHEMA_VERSIONS=gemini-video-v1
VIDEO_KEYFRAME_PATTERN=^[A-Za-z0-9][A-Za-z0-9_-]{1,63}$
VIDEO_EVIDENCE_REF_PATTERN=^[a-z][a-z0-9_-]*:.+

