# Crebit Node Canvas - Backend Environment
ENVIRONMENT=development
PROJECT_NAME=Crebit Node Canvas

# PostgreSQL
POSTGRES_USER=crebit_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=crebit_canvas
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# CORS
CORS_ORIGINS=http://localhost:3100,http://127.0.0.1:3100
SEED_AUTEUR_DATA=false
ALLOW_INPUT_FALLBACKS=true
VIDEO_SCHEMA_VERSIONS=gemini-video-v1
VIDEO_KEYFRAME_PATTERN=^[A-Za-z0-9][A-Za-z0-9_-]{1,63}$
VIDEO_EVIDENCE_REF_PATTERN=^[a-z][a-z0-9_-]*:.+

# Auth (Google OAuth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
GOOGLE_OAUTH_SCOPES=openid email profile
SESSION_SECRET=change_me
SESSION_TTL_SECONDS=604800
OAUTH_STATE_TTL_SECONDS=600
SESSION_COOKIE_NAME=crebit_session
OAUTH_STATE_COOKIE_NAME=crebit_oauth_state
AUTH_SUCCESS_REDIRECT=http://localhost:3100
AUTH_ERROR_REDIRECT=http://localhost:3100/login?error=auth_failed
MASTER_ADMIN_EMAILS=ted.taeeun.kim@gmail.com

# External adapters (optional)
ENABLE_EXTERNAL_ADAPTERS=false
NOTEBOOKLM_API_URL=
NOTEBOOKLM_API_KEY=
OPAL_API_URL=
OPAL_API_KEY=
GEMINI_API_KEY=
